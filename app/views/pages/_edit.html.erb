<!-- custom form to deal with escaped HTML characters -->
<%= form_for @page do |f| %>
	<%= @page.name %>
  <textarea name="page[content]" id="editor1"><%= CGI.unescapeHTML(@page.content).html_safe if @page.content %></textarea>
  <input name="commit" value="save" class="btn btn-primary" type="submit">
<% end %>