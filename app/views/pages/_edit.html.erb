<%= form_for @upload, :remote => true, :authenticity_token => true, :html => { :style => '' }  do |f| %>
	<p>
		<%= f.label :file %><br />
		<%= f.file_field :file %>
		<%= f.hidden_field :container_id, value: @page.container.id %>
	</p>	
<% end %>

<!-- custom form to deal with escaped HTML characters -->
<%= form_for @page do |f| %>
	<div class="editable_elem">
		<h3><%= f.text_field :name %></h3>
	</div>
  <textarea name="page[content]" id="editor1" class="editable_elem"><%= CGI.unescapeHTML(@page.content).html_safe if @page.content %></textarea>
  <input name="commit" value="save" class="btn btn-primary" type="submit">
<% end %>
